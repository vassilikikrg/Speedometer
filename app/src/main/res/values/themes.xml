<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Speedometer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--Primary brand color-->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--Secondary brand color-->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorSecondaryVariant">@color/turquoise_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="ScreenBackground"><item name="android:background">@color/white</item></style>
    <style name="ToolBarBackground"><item name="android:background">@color/purple</item></style>

    <style name="CardBackground"><item name="android:background">@color/white</item></style>
    <style name="TextColor"><item name="android:textColor">@color/dark_grey</item></style>
    <style name="ButtonColor"><item name="android:backgroundTint">@color/purple</item><item name="android:textColor">@color/black</item></style>
    <style name="TrackingButtonColor"><item name="android:backgroundTint">@color/turquoise</item><item name="android:textColor">@color/black</item></style>

    <style name="PinIcon"><item name="android:src">@drawable/pin_black</item></style>
    <style name="SpeedIcon"><item name="android:src">@drawable/speed_black</item></style>
    <style name="LimitTextIcon"><item name="android:drawableLeft">@drawable/speed_black</item></style>
    <style name="TimeIcon"><item name="android:src">@drawable/time_black</item></style>
    <style name="Theme.Speedometer" parent="Base.Theme.Speedometer" />

</resources>