<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Speedometer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- Customize your dark theme here. -->
        <!--Primary brand color-->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryVariant">@color/dark_purple_variant</item>
        <item name="colorOnPrimary">@color/dark_grey</item>
        <!--Secondary brand color-->
        <item name="colorSecondary">@color/dark_turquoise</item>
        <item name="colorSecondaryVariant">@color/dark_turquoise_variant</item>
        <item name="colorOnSecondary">@color/light_grey</item>
        <!--Status bar color-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="ScreenBackground"><item name="android:background">@color/dark_grey</item></style>
    <style name="ToolBarBackground"><item name="android:background">@color/dark_purple</item></style>
    <style name="CardBackground"><item name="android:background">@color/dark_grey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/light_grey</item></style>
    <style name="ButtonColor"><item name="android:backgroundTint">@color/dark_purple</item><item name="android:textColor">@color/light_grey</item></style>
    <style name="TrackingButtonColor"><item name="android:backgroundTint">@color/dark_turquoise</item><item name="android:textColor">@color/light_grey</item></style>

    <style name="PinIcon"><item name="android:src">@drawable/pin_white</item></style>
    <style name="SpeedIcon"><item name="android:src">@drawable/speed_white</item></style>
    <style name="TimeIcon"><item name="android:src">@drawable/time_white</item></style>

</resources>